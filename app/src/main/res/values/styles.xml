<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorAdditional</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TestSeekBar">
        <item name="android:indeterminateDrawable">@color/colorMain</item>
        <item name="android:progressTint">@color/colorMain</item>
        <item name = "android:thumb"> @drawable/seekbar_thumb</item>
    </style>

    <style name="TextViewTestsStyle">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextViewTestsStyleValues" parent="TextViewTestsStyle">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
