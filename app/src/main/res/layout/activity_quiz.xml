<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topPanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorMain"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/question_id_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#134245"
                style="@style/TopBarTextViewTheme"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/question_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/40"
                style="@style/TopBarTextViewTheme"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/question_id_textView"
                android:layout_marginStart="@dimen/fab_margin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time left:"
                style="@style/TopBarTextViewTheme"
                app:layout_constraintRight_toLeftOf="@id/time_textView"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:49"
                style="@style/TopBarTextViewTheme"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/question_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        >

    </androidx.viewpager.widget.ViewPager>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomPanel"
        app:layout_constraintTop_toBottomOf="@id/question_view_pager"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/quiz_id_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RegistrationTextViewStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Quiz ID:"
            android:layout_margin="@dimen/fab_margin"
            />
        <TextView
            android:id="@+id/quiz_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RegistrationTextViewStyle"
            android:layout_margin="@dimen/fab_margin"
            app:layout_constraintLeft_toRightOf="@+id/quiz_id_text_label"
            app:layout_constraintTop_toTopOf="parent"
            android:text="75"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/finish_attempt_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="Finish attempt"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>